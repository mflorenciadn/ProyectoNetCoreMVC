@model MVC.ReservaDeCine.Models.Funcion

@{
    ViewData["Title"] = "Detalles de la función";
}

<h1>Funciones</h1>

<div>
    <h4>Detalle</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sala)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sala.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pelicula)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pelicula.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaHora)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaHora)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CantButacasDisponibles)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CantButacasDisponibles)
        </dd>
    </dl>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reservas)
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (Reserva reserva in Model.Reservas)
            {
                <li> Cliente: @reserva.Cliente.Username,  Cantidad de butacas: @reserva.CantButacas</li>
            }
            </ul>
        </dd>
    </dl>
</div>

<div>
    <a asp-controller="Funciones" asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
    <a asp-controller="Funciones" asp-action="Index">Volver a la lista</a>
</div>
