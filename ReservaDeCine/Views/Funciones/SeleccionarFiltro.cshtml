@model MVC.ReservaDeCine.Models.Funcion

@{
    ViewData["Title"] = "Seleccionar Filtro";
}

<h3>Seleccionar Filtro</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Funciones" asp-action="FiltroFecha">
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" type="text" class="form-control" value="@DateTime.Today.ToString("dd/MM/yyyy")" id="datepicker" />
            </div>
            <div class="form-group">
                <input type="submit" value="Buscar" class="btn btn-outline-secondary" />
            </div>
        </form>


        <form asp-controller="Funciones" asp-action="FiltroPelicula">
            <div class="form-group">
                <label asp-for="PeliculaId" class="control-label"></label>
                <select asp-for="PeliculaId" class="form-control" asp-items="ViewBag.SelectPeliculas"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Buscar" class="btn btn-outline-secondary" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-controller="Home" asp-action="Index">Volver al inicio</a>
</div>

@section Scripts {
<script>
    $(function () {
        $('#datepicker').datepicker({
            maxViewMode: 2,
            clearBtn: true,
            language: "es",
            autoclose: true,
            startDate: new Date()
        });
    })
 </script>
}
