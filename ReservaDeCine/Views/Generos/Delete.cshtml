@model MVC.ReservaDeCine.Models.Genero

@{
    ViewData["Title"] = "Eliminar género";
}

<h1>Géneros</h1>
<h3>¿Está seguro que desea eliminar este género?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
    </dl>
    
    <form asp-controller="Generos" asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-controller="Generos" asp-action="Index">Volver a la lista</a>
    </form>

</div>
