@model MVC.ReservaDeCine.Models.TipoSala

@{
    ViewData["Title"] = "Crear tipo de sala";
}

<h1>Tipos de Sala</h1>
<h4>Crear nuevo tipo de sala</h4>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-controller="TiposSalas" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control"  minlength=2 maxlength=20 required/>
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecioEntrada" class="control-label"></label>
                <input asp-for="PrecioEntrada" type="number"  class="form-control" required/>
                <span asp-validation-for="PrecioEntrada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="TiposSalas" asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
